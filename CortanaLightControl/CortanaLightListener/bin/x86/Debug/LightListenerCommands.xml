<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="CortanaLightListenerCommandSet_en-us">
    <CommandPrefix>Code Camp,</CommandPrefix>
    <Example> Make the magic happen </Example>
    
    <Command Name="switchAllHueLights">
      <Example>turn the lights on</Example>
      <ListenFor>turn the lights {action}</ListenFor>
      <Feedback>Turning the lights {action}</Feedback>
      <Navigate/>
    </Command>

    <Command Name="switchSpecificHueLight">
      <Example>turn the Office Lamp on</Example>
      <ListenFor>turn the {lightname} {action}</ListenFor>
      <Feedback>Turning the {lightname} {action}</Feedback>
      <Navigate/>
    </Command>
    
    <PhraseList Label="action">
      <Item>on</Item>
      <Item>off</Item>
      <Item>red</Item>
    </PhraseList>

    <PhraseList Label="lightname">
      <Item>Office</Item>
      <Item>Bedroom</Item>
      <Item>Kitchen</Item>
    </PhraseList>
  </CommandSet>
</VoiceCommands>